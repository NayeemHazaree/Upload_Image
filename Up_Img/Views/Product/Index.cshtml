@using Up_Img.Utility
@model IEnumerable<Up_Img.Models.Models.Product>

<div class="border p-3">
    <div class="row">
        <div class="col-6">
            <h2>Product List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-action="Upsert">Add New Product</a>
        </div>
    </div>
    <br />
    <hr />
    @if (Model.Count() > 0)
    {
        <table class="table table-responsive table-hover table-bordered table-striped" style="text-align:center;">
            <thead>
                <tr>
                    <th scope="col">Product Name</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prod in Model)
                {
                    <tr>
                        <td>@prod.Name</td>
                        <td>@prod.Brand.Name</td>
                        <td>@prod.Price</td>
                        <td>
                            <img style="height:50px;width:50px;" src="@WC.ProductImg@prod.Img_Path">
                        </td>
                        <td>
                            <div class="row">
                                <div class="col-6">
                                    <a class="btn btn-secondary" asp-action="Upsert" asp-route-id="@prod.Id">Edit</a>
                                </div>
                                <div class="col-6">
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@prod.Id">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Produtcs added yet!</p>
    }
</div>