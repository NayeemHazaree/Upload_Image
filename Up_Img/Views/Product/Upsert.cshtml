@model Up_Img.Models.Models.Product


@{
    var title = "Add Product";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    @if (Model.Id != Guid.Empty)
    {
        title = "Edit Product";
        <input asp-for="Id" hidden />
    }

    <div class="border p-3">
        <div class="row form-group">
            <h2 class="text-info">@title</h2>
        </div>
        <br />
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-4">
                        <label asp-for="BrandId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="BrandId" asp-items="@Model.BrandNames" class="form-control">
                            <option disabled selected>--Select Brand--</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control" />
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-4">
                        <label>Upload Image</label>
                    </div>
                    <div class="col-8">
                        <input type="file" name="up_files" accept="image/png, image/gif, image/jpeg" class="form-control" />
                    </div>
                </div>
                <div class="form-group row pt-2">
                    <div class="col-8 offset-4 row">
                        <div class="col-4">
                            @if (Model.Id == Guid.Empty)
                            {
                                <input type="submit" class="btn btn-info w-100" value="Create" />
                            }
                            else
                            {
                                <input type="submit" class="btn btn-info w-100" value="Update" />
                            }
                        </div>
                        <div class="col-4">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>