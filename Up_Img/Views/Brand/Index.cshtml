@model IEnumerable<Up_Img.Models.Models.Brand>

<div class="border p-3">
    <div class="row">
        <div class="col-6">
            <h2>Brand List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-action="Upsert">Add New Brand</a>
        </div>
    </div>
    <br />
    <hr />
    @if (Model.Count() > 0)
    {
        <table class="table table-responsive table-hover table-bordered table-striped" style="text-align:center;">
            <thead>
                <tr>
                    <th scope="col">Brand Name</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var br in Model)
                {
                    <tr>
                        <td>@br.Name</td>
                        @if (@br.Status == true)
                        {
                            <td>
                                <input type="checkbox" checked disabled>
                            </td>
                        }
                        else
                        {
                            <td>
                                <input type="checkbox" disabled>
                            </td>
                        }
                        <td>
                            <div class="row">
                                <div class="col-6">
                                    <a class="btn btn-secondary" asp-action="Upsert" asp-route-id="@br.Id">Edit</a>
                                </div>
                                <div class="col-6">
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@br.Id">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Brand added yet!</p>
    }
</div>